{% extends "layout_front.html.twig" %}

{% block title %}Loisirs{% endblock %}

{% block content %}
  <h1>Loisir</h1>
  {% for loisir in loisirs %}
    <article class="row col-md-10 col-md-offset-1">
        <h2><a class="articleTitle" href="{{ path('loisir_single', { 'id': loisir.id }) }}">{{ loisir.title }}</a></h2>
        <p>{{ loisir.content }}</p>
    </article>
  {% endfor %}
{% endblock %}
